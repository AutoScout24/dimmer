# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                             @toguru.app.Application.index

GET        /healthcheck                  @toguru.app.Application.healthCheck

GET        /readycheck                   @toguru.app.Application.readyCheck

GET        /toggle/:id                   @toguru.toggles.ToggleController.get(id: String)

POST       /toggle                       @toguru.toggles.ToggleController.create

POST       /toggle/:id/globalrollout     @toguru.toggles.ToggleController.createGlobalRollout(id: String)

PUT        /toggle/:id/globalrollout      @toguru.toggles.ToggleController.updateGlobalRollout(id: String)
